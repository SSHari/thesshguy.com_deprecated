{
  "name": "thesshguy.com",
  "private": true,
  "description": "My personal website",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --minify",
    "build:types": "npx openapi-typescript $SUPABASE_URL/rest/v1/?apikey=$SUPABASE_KEY --output app/types/supabase.ts",
    "deploy": "fly deploy --remote-only",
    "dev": "npm-run-all --parallel dev:remix dev:css",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "format": "npm run format:files -- --write",
    "format:files": "prettier  .",
    "format:check": "npm run format:files -- --check",
    "lint": "eslint .",
    "postinstall": "remix setup node",
    "prepare": "husky install",
    "start": "remix-serve build",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "validate": "npm-run-all --parallel format:check lint test typecheck"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/language-data": "^6.1.0",
    "@reach/dialog": "^0.17.0",
    "@remix-run/react": "^1.6.5",
    "@remix-run/serve": "^1.6.5",
    "@remix-run/server-runtime": "^1.6.5",
    "@replit/codemirror-vim": "^6.0.1",
    "@supabase/supabase-js": "^1.35.4",
    "@uiw/react-codemirror": "^4.11.4",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "esbuild": "^0.14.49",
    "mdx-bundler": "^9.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prism-react-renderer": "^1.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "redis": "^4.2.0",
    "rehype-postcss": "^0.2.1",
    "remix": "^1.6.5",
    "tailwindcss": "^3.1.6",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.5",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/tailwindcss": "^3.0.11",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "ssh-dev-scripts": "^1.2.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
